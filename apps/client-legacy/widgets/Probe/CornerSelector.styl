.cornerSelectorWrapper {
  position: absolute;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  gap: 2px;
  top: 0;
  right: 0;
  width: 80px;
  align-items center;
  justify-content center;
  background: rgba(45, 123, 206, 0.1);
  border-radius: 10px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: 1px solid rgba(45, 123, 206, 0.3);
  box-sizing border-box;
}


.cornerButton {
  background: none;
  border:none;
  outline: none;
  display: flex;
  padding: none;
  min-width: none;
  align-items center;
  justify-content center;
  margin: none;
  flex-basis: calc(50% - 3px);
  > img {
    width: 25px;
  }
  &-active {
    border-color: black
  }
}

.tr {
}

.tl {
  img {
    transform: rotate(270deg)
  }
}

.bl {
  img {
    transform: rotate(180deg)
  }
}

.br {
  img {
    transform: rotate(90deg)
  }
}

