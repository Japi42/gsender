.widget-content {
    overflow: auto;
}

.height-override {
    height: 100% !important;
}

.machine-position {
    width: 15ch;
    align-items center;
}

.btn-up {
    clip-path: polygon(0 25%, 50% 0, 100% 25%, 100% 100%, 50% 75%, 0 100%);
    width: 50px;
    height: 50px;
}

.btn-down {
    clip-path: polygon(0 75%, 50% 100%, 100% 75%, 100% 0, 50% 25%, 0 0);
    width: 50px;
    height: 50px;
}

.jog-control-wrapper {
    margin-top: 1rem;
    max-width: 150px;
    display: flex;
    gap: 0.5rem;
    width: 33%;
    flex-direction: column;
}

.preset-controls {
    display: flex;
    flex-direction: column;
}

.active-button {
    background: rgba(119,169,215, 0.3) !important;
    color: #3e85c7 !important;
    border: solid 1px #3e85c7 !important;
    position: relative;
}

.active-indicator {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    background: #3e85c7;
    clip-path: polygon(100% 50%, 0 0, 0 95%);
    width: 0.8rem;
    height: 0.8rem;
}

.speed-controls-wrapper {
    display: flex;
    gap: 1rem;
    width: 100%;
    flex-direction: column;
}

.rotary-axis-wrapper {
    display: flex;
    gap: 1rem;
    position: absolute;

    @media (max-width: 1230px) {
        flex-wrap: wrap;
        justify-content: center;
    }
}

.rotary-jog-control-area {
    width: 60%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    border-right: 1px solid lightgrey;
    padding-right: 1rem;

    @media (max-width: 1230px) {
        width: 100%;
        border: none;
    }
}

.rotary-tools-area {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    @media (max-width: 1230px) {
        width: 100%;
    }
}

.rotary-tab-section-title {
    color: grey;
    font-weight: bold;
    font-size: 1.2rem;
}