// Bootstrap 3 Responsive Columns of Same Height
// http://www.minimit.com/articles/solutions-tutorials/bootstrap-3-responsive-columns-of-same-height

.row-height {
  display: table;
  table-layout: fixed;
  height: 100%;
  width: 100%;
}
.col-height {
  display: table-cell;
  float: none;
  height: 100%;
}
.col-top {
  vertical-align: top;
}
.col-middle {
  vertical-align: middle;
}
.col-bottom {
  vertical-align: bottom;
}
.col-content {
  margin-top: 10px;
  margin-bottom: 10px;
}
.col-content-full-height {
  height: 100%;
  margin-top: 0;
  margin-bottom: 0;
}

