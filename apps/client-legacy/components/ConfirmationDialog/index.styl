.confirmationDialogWrapper {
  position: absolute;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  background-color: rgba(51, 51, 51, .55);
  z-index: 10001;
}


.confirmation-dialog {
  background: #FFFFFF;
  width: 500px;
  border-radius: 0.5rem;
}

.confirmation-bar {
  height: 5px;
  background: #DC2626;
  width: 100%;
  display: flex;
}

.confirmation-dialog-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 1.6rem;
  padding: 2rem;
  i {
    font-size: 3rem !important;
    color: #DC2626;
    margin-right: 1rem;
  }

}

.confirmation-dialog-content {
  padding: 1rem;
  font-size: 1rem;
  background: #e5e7eb;
  border-top: solid 1px #D1D5DB;
  text-align: center;
}

.confirmation-dialog-buttons {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 1rem;
  background: #e5e7eb;
  gap: 1rem;
  transition: 150ms ease-in;
}

.confirmation-dialog-button {
  padding: 0.5rem 1rem;
  font-size: 1rem;
  border-radius: 0.5rem;
  background: none;
  border: none;
  outline: none;
}


.confirmation-dialog-button-confirm {
  background: #3e85c7;
  color: #FFFFFF;

  &:hover {
    background: #5191cc;
  }
}

.confirmation-dialog-button-cancel {
  color: #DC2626;
  border: solid 1px #DC2626;
  &:hover {
    background: #e66767;
    color: #FFFFFF;
  }
}

.confirmation-dialog-button-invert {
  background: #3e85c7;
  color: #FFFFFF;
}

.hidden {
  display: none;
}
